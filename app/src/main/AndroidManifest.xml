<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.donpepe">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DonPepe"
        android:usesCleartextTraffic="true">
        <activity android:name=".RouteActivity"></activity>
        <activity android:name=".SaleItemActivity" />
        <activity android:name=".PurchaseItemActivity" />
        <activity android:name=".SaleActivity" />
        <activity android:name=".SalesActivity" />
        <activity android:name=".PurchaseActivity" />
        <activity android:name=".PurchasesActivity" />
        <activity android:name=".MapsActivity" />
        <activity android:name=".CartItemActivity" />
        <activity android:name=".CartActivity" />
        <activity android:name=".SellSelectActivity" />
        <activity android:name=".SellActivity" />
        <activity android:name=".ProductItemActivity" />
        <activity android:name=".SignUpActivity" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".ProductActivity" />
        <activity android:name=".CategoryActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="${MAPS_API_KEY}" />
    </application>

</manifest>