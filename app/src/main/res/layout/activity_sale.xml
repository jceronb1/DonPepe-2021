<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SaleActivity">

    <ImageView
        android:id="@+id/sBuyerPurchaseImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_foreground" />

    <TextView
        android:id="@+id/sBuyerEmailText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buyer Email"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/sBuyerPurchaseImg"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sBuyerPhoneText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buyer Phone"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/sBuyerPurchaseImg"
        app:layout_constraintTop_toBottomOf="@+id/sBuyerEmailText" />

    <TextView
        android:id="@+id/sSalePriceText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sale Price"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/sBuyerPurchaseImg"
        app:layout_constraintTop_toBottomOf="@+id/sBuyerPhoneText" />

    <TextView
        android:id="@+id/sSaleStatusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sale Status"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/sBuyerPurchaseImg"
        app:layout_constraintTop_toBottomOf="@+id/sSalePriceText" />

    <ListView
        android:id="@+id/sItemsList"
        android:layout_width="411dp"
        android:layout_height="609dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sBuyerPurchaseImg" />

    <Button
        android:id="@+id/updateStatusButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/routeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:text="route"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/updateStatusButton" />

</androidx.constraintlayout.widget.ConstraintLayout>